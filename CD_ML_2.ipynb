    n = min(len(pl_blend), len(pl_bacd_12), len(pl_pda_12))
    a, b, fit, res, r2 = nnls_fit(pl_bacd_12[:n], pl_pda_12[:n], pl_blend[:n])
    blend_results[ph] = {'alpha': a, 'beta': b, 'fitted': fit,
                         'residuals': res, 'r2': r2,
                         'pl': pl_blend[:n], 'n': n}

